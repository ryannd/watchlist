{
  "name": "watchlist",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && mvn spring-boot:run",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "commit": "cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "commitizen": "^4.3.0",
    "cz-emoji": "^1.0.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
